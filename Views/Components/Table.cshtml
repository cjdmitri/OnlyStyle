    <h3 id="coloredtable">Table colored row</h3>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @{
                int iter = 0;
                foreach (string item in MyApp.ColorVariants)
                {
                    iter++;
                    <tr class="bg-@item">
                        <td>@iter</td>
                        <td>bg-@item</td>
                        <td>1985</td>
                    </tr>
                    <tr class="bg-@item-dark">
                        <td>@iter</td>
                        <td>bg-@item-dark</td>
                        <td>1985</td>
                    </tr>
                    <tr class="bg-@item-light">
                        <td>@iter</td>
                        <td>bg-@item-light</td>
                        <td>1985</td>
                    </tr>

                }
            }
        </tbody>
    </table>
