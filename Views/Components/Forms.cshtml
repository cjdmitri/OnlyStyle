@* Form controls *@
<div class="grid g-1">
    <div>
        <h3 id="formcontrols">Form controls</h3>
        <div class="card pd-15">
            <label for="input1" class="form-label">Simple text</label>
            <input type="text" class="form-control" id="input1" placeholder="Text..." />
            <label for="textarea" class="form-label">Textarea</label>
            <textarea id="textarea" class="form-control" rows="4"></textarea>
            <label for="inputint" class="form-label">Number</label>
            <input type="number" class="form-control" id="inputint" placeholder="Number..." />
            <label for="inputemail" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputemail" placeholder="Email..." />
            <label for="inputpass" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputpass" placeholder="Password..." />
            <label for="dataList" class="form-label">Datalist</label>
            <input class="form-control" list="datalist1" id="dataList" placeholder="Set name...">
            <datalist id="datalist1">
                <option value="Mark" />
                <option value="Dmitriy" />
                <option value="Anna" />
                <option value="Roman" />
                <option value="Oleg" />
            </datalist>
            <label for="dataList" class="form-label">Select</label>
            <select class="form-control">
                <option selected>Select...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>

        </div>
    </div>
    <div>
        <h3 id="checkandradio">Checkbox and radio</h3>
        <div class="card pd-15">
            <h4>Checkbox</h4>
            <div class="form-check">
                <input type="checkbox" value="" id="checkbox1">
                <label for="checkbox1">Default checkbox</label>
            </div>
            <div class="form-check">
                <input type="checkbox" value="" id="checkbox2" checked>
                <label for="checkbox2">Checked checkbox</label>
            </div>
            <h4>Radios</h4>
            <div class="form-check">
                <input type="radio" id="radio1" name="radiogroup1" value="radio1">
                <label for="radio1">Radio 1</label>
            </div>
            <div class="form-check">
                <input type="radio" id="radio2" name="radiogroup1" value="radio2" checked>
                <label for="radio2">Radio 2</label>
            </div>
            <div class="form-check">
                <input type="radio" id="radio3" name="radiogroup1" value="radio3">
                <label for="radio3">Radio 3</label>
            </div>
        </div>
    </div>
    
</div>
