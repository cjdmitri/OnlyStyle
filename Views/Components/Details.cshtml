

<div class="grid g-sm-1 g-md-2">
    <div>
        <h3>Default details style</h3>
        @{
            for (int i = 0; i < 4; i++)
            {
                <details class="mg-b-15">
                    <summary>Summary</summary>
                    <div>
                        <ul>
                            <li>1</li>
                            <li>2</li>
                            <li>3</li>
                            <li>4</li>
                            <li>5</li>
                        </ul>

                    </div>
                </details>
            }
